<!DOCTYPE html>
<html lang="{{ app.request.get('_locale') }}">
<head>
    <!-- Meta -->
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="viking tours">
    <meta http-equiv="X-UA-Compatible" content="IE=7">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <meta charset="utf-8">

    <title>Viking{% block title %}{% endblock %}</title>

    <!-- Web fonts -->
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,700|Playfair+Display:900" rel="stylesheet">

    <!-- favicon.ico. Place these in the root directory. -->
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
